<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

    <!--프로필-->
        <include layout="@layout/layout_profile" />
        <include layout="@layout/layout_profile2"/>
        <include layout="@layout/layout_profile3"></include>
        <include layout="@layout/layout_profile4"></include>
        <include layout="@layout/layout_profile5"></include>
    </LinearLayout>

    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/layout_con"></include>
            <include layout="@layout/layout_con"></include>
            <include layout="@layout/layout_con"></include>
        </LinearLayout>


    </ScrollView>
</LinearLayout>